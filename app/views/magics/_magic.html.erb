<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to magic.title.upcase, magic %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words(magic.created_at, Time.now) %> ago</p>
  
  <% if logged_in?(:site_admin) %>
    <p class="blog-post-meta">
    <%= link_to magic.status, toggle_status_blog_path(magic) %> /
    <%= link_to 'Edit', edit_magic_path(magic) %> /
    <%= link_to 'Delete Post', magic, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
    </p>
  <% end %>

  <p>
    <%= magic.body %>
  </p>
</div>